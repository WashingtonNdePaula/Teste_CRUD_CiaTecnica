@model Teste_CRUD_CiaTecnica.Presentation.MVC.ViewModels.PessoaJuridicaViewModel

@{
    ViewBag.Title = "Excluir Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Exluir Cliente</h2>

<h3>Tem certeza que deseja excluir este cliente?</h3>

<div>
    <h4>Pessoa Jurídica</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CNPJ)
        </dd>

        <dt>
            Razão Social:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeFantasia)
        </dd>
        @Html.Partial("_DetailsPessoa", Model.Pessoa)
    </dl>
    @using (Html.BeginForm("Delete","Cliente"))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.PessoaId)
            @Html.HiddenFor(model => model.Pessoa.TipoPessoa)
            <input type="submit" value="Exlcuir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
